# SoulMatting Platform - Staging Environment Configuration
# Author: Kim Hsiao
# Version: 1.0.0
# Created: 2024-01-20
# Last Updated: 2024-01-20
# Staging environment configuration
# DO NOT commit this file to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=staging
APP_NAME=SoulMatting
APP_VERSION=1.0.0
APP_ENV=staging
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL
DATABASE_URL=postgres://staging_user:staging_password@staging-db:5432/soulmatting_staging
DATABASE_HOST=staging-db
DATABASE_PORT=5432
DATABASE_NAME=soulmatting_staging
DATABASE_USER=staging_user
DATABASE_PASSWORD=staging_password
DATABASE_SSL=true
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# Redis
REDIS_URL=redis://staging-redis:6379
REDIS_HOST=staging-redis
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_password
REDIS_DB=0

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
SUPABASE_URL=https://staging-supabase.example.com
SUPABASE_ANON_KEY=staging_anon_key_placeholder
SUPABASE_SERVICE_KEY=staging_service_key_placeholder

# GoTrue (Auth)
GOTRUE_API_HOST=0.0.0.0
GOTRUE_API_PORT=9999
GOTRUE_DB_DRIVER=postgres
GOTRUE_SITE_URL=https://staging.soulmatting.com

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
API_PORT=3001
HOST=0.0.0.0
CORS_ORIGIN=https://staging.soulmatting.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=staging_jwt_secret_placeholder
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=staging_encryption_key_placeholder
SESSION_SECRET=staging_session_secret_placeholder

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email Service
SMTP_HOST=smtp.staging.example.com
SMTP_PORT=587
SMTP_USER=staging_smtp_user
SMTP_PASSWORD=staging_smtp_password
SMTP_FROM=noreply@staging.soulmatting.com

# File Storage
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=staging_aws_access_key
AWS_SECRET_ACCESS_KEY=staging_aws_secret_key
AWS_REGION=us-west-2
AWS_S3_BUCKET=soulmatting-staging

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
SENTRY_DSN=https://staging_sentry_dsn@sentry.io/project
LOG_FILE_PATH=/var/log/soulmatting/staging.log
METRICS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_REGISTRATION=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_PREMIUM_FEATURES=true
FEATURE_ANALYTICS=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_ENABLED=true

# =============================================================================
# DEVELOPMENT TOOLS (Disabled in staging)
# =============================================================================
DEBUG_MODE=false
HOT_RELOAD=false
SOURCE_MAPS=false
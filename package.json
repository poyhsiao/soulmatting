{
  "name": "soulmatting",
  "version": "1.0.0",
  "description": "SoulMatting - Next-generation dating platform with intelligent matching",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=22.12.0",
    "pnpm": ">=10.15.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:frontend": "pnpm --filter @soulmatting/web test",
    "test:backend": "turbo test --filter='./services/*'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "playwright:install": "playwright install",
    "test:bdd": "cucumber-js",
    "test:bdd:ui": "cucumber-js --tags '@ui'",
    "test:bdd:api": "cucumber-js --tags '@api'",
    "test:bdd:smoke": "cucumber-js --tags '@smoke'",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "pnpm install && pnpm run build",
    "db:migrate": "pnpm --filter @soulmatting/database run migrate",
    "db:migrate:test": "pnpm --filter @soulmatting/database run migrate:test",
    "db:seed": "pnpm --filter @soulmatting/database run seed",
    "db:studio": "pnpm --filter @soulmatting/database run studio"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.0",
    "@playwright/test": "^1.41.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.0",
    "axios": "^1.11.0",
    "jest": "^29.7.0",
    "jest-watch-typeahead": "^3.0.1",
    "playwright": "^1.55.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "turbo": "^1.12.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "dating",
    "matching",
    "social",
    "nestjs",
    "react",
    "typescript",
    "microservices"
  ],
  "author": "Kim Hsiao",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kimhsiao/soulmatting.git"
  }
}
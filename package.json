{
  "name": "soulmatting",
  "version": "1.0.0",
  "description": "SoulMatting - Next-generation dating platform with intelligent matching",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=22.12.0",
    "pnpm": ">=10.15.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:frontend": "pnpm --filter @soulmatting/web test",
    "test:backend": "turbo test --filter='./services/*'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "playwright:install": "playwright install",
    "test:bdd": "cucumber-js",
    "test:bdd:ui": "cucumber-js --tags '@ui'",
    "test:bdd:api": "cucumber-js --tags '@api'",
    "test:bdd:smoke": "cucumber-js --tags '@smoke'",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "pnpm install && pnpm run build",
    "db:generate": "pnpm --filter @soulmatting/database run generate",
    "db:migrate": "pnpm --filter @soulmatting/database run migrate",
    "db:migrate:test": "pnpm --filter @soulmatting/database run migrate:test",
    "db:seed": "pnpm --filter @soulmatting/database run seed",
    "db:studio": "pnpm --filter @soulmatting/database run studio",
    "license-check": "license-checker --excludePrivatePackages --onlyAllow 'MIT;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC;0BSD;CC0-1.0;MPL-2.0'",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:audit:fix": "pnpm audit fix"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.9.0",
    "@faker-js/faker": "^9.4.0",
    "@playwright/test": "^1.55.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.11",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "artillery": "^2.0.20",
    "axios": "^1.11.0",
    "eslint": "catalog:",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.20",
    "jest": "^29.7.0",
    "jest-watch-typeahead": "^3.0.1",
    "js-yaml": "^4.1.0",
    "license-checker": "^25.0.1",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "turbo": "^1.13.4",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "dating",
    "matching",
    "social",
    "nestjs",
    "react",
    "typescript",
    "microservices"
  ],
  "author": "Kim Hsiao",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kimhsiao/soulmatting.git"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.9"
    }
  }
}
